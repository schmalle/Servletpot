<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name="org.metams.ServletPot.Database.Hibernate.HibernateURI" table="URIs" >
     <cache usage="read-write"/>

  <id name="id" type="int" column="id" >
   <generator class="native"/>
  </id>

  <property name="hash">
   <column name="hash" />
  </property>
  <property name="counter">
   <column name="counter"/>
  </property>
     <property name="length">
      <column name="length"/>
     </property>

     <property name="uri">
        <column name="uri"/>
       </property>
 </class>
</hibernate-mapping>

